.task-list-overlay
  position absolute
  left 0
  top 0
  height 100%
  width 100%
  background-image linear-gradient(0deg, white, transparent 8px), linear-gradient(180deg, white, transparent 8px)
  pointer-events none

.task-list-column
.task-list-sidebar-column
  display inline-flex
  flex-direction column
  width 100%

.task-list
.task-list-sidebar
  display flex
  padding 8px
  flex-direction row
  justify-content center

.task-list-container
  position relative
  padding 0

.task-list-item
  position relative
  width 108px
  margin-bottom 8px
  margin-right 8px

.task-list-filter-radio
  position relative
  top 4px
  width 18px
  height 18px
  margin 0 4px 0 4px

.task-list-filter-label
  position relative
  margin 4px

.task-form
  margin-bottom 4px
  padding-top 4px
  background-color white
