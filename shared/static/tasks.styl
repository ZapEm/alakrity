.task-item
  height 100%
  width 108px
  background-color white
  border solid 1px $theme
  text-align center
  .task-item-buttons
    position absolute
    top 0
    width 106px
  &.special
    color white
    border-width 2px
  &.dragging
    pointer-events none
    z-index 0
    opacity 0.4

.task-status-icon
  color rgba(0,0,0, 0.3)
  margin 2px
  //font-size 15pt

.task-item-edit
  position relative
  margin 0
  min-height 32px
  border-left-width 2px
  border-right-width 2px
  border-top-width 2px
  border-bottom-width 6px
  z-index 2

.task-item-edit-buttons
  animation slide-in .2s ease-out 1
  z-index 1
  border solid 1px $theme-border
  border-radius 6px
  position relative
  height 72.5px
  margin 0
  top -10px
  width 104px
  text-align center
  left 2px
  &.cutoff
    height 50px


.cutoff-duration
  position relative
  font-size small
  font-style italic

.ti-edit-btn-line
  float bottom
  width 100%

.task-item-title-edit
  margin 0 2px
  height 22px
  background-color rgba(255, 255, 255, 0.7)
  line-height 22px
  width auto
  text-align center

.task-item-info
  position relative
  pointer-events none
  box-sizing border-box
  display -ms-flexbox
  display flex
  -ms-flex-direction column
  flex-direction column
  justify-content center
  max-height 100%
  min-height 100%
  overflow hidden
  p
    margin 1px
    &.title
      font-weight 500
    &.duration
      font-size small
      font-style italic

.task-item-handle
  width 108px
  height 15px
  line-height 10px
  bottom -13px
  color lighten($theme, 70%)
  cursor ns-resize

.task-list-view
  position relative
  background-color white

