.task-item
  height 100%
  width 108px
  background-color white
  border solid 1px $theme
  text-align center
  .task-item-buttons
    position absolute
    top 0
    right 0
  &.special
    color white
    border-width 2px

.task-item-edit
  position relative
  margin 0
  min-height 2rem
  border-left-width 2px
  border-right-width 2px
  border-top-width 2px
  border-bottom-width 6px
  z-index 2

@keyframes swing_in {
   from {
     transform-origin 4px 4px
     transform rotate(90deg)
   }
   to {
     transform-origin 4px 4px
     transform rotate(0deg)
   }
}

@keyframes slide_in {
  from {
    transform translate(-40px)
    opacity 0
  }
  to {
    transform translate(0px)
    opacity 1
  }
}

.task-item-edit-buttons
  animation slide_in .3s ease-out 1
  z-index 0
  padding 0 0 0 80px
  border solid 1px $theme-border
  border-radius 6px
  border-bottom-left-radius 80px
  position absolute
  top 4px
  right -34px
  //box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)

.task-item-title-edit
  margin 6px 2px 1px 2px
  height 22px
  background-color rgba(255, 255, 255, 0.7)
  line-height 22px
  width auto
  text-align center

.task-item-info
  position relative
  box-sizing border-box
  display -ms-flexbox
  display flex
  -ms-flex-direction column
  flex-direction column
  justify-content center
  max-height 100%
  min-height 100%
  overflow hidden
  p
    margin 1px
    &.duration
      font-size small
      font-style italic

.task-item-handle
  width 108px
  height 15px
  line-height 10px
  bottom -13px
  color lighten($theme, 70%)
  cursor ns-resize

.task-list-view
  //box-sizing border-box
  position relative
  //min-height 30vh
  //max-height 30vh


.task-list-view-sidebar
  box-sizing border-box
  position absolute
  top 8px
  bottom 8px
  left 8px
  right 8px

//.task-list-sidebar

.task-list
  display flex
  flex-wrap wrap
  flex-direction column
  position relative
  width 100%
  height 100%
  margin 8px 0
  list-style none
  overflow auto

.task-list-container
  position relative
  padding 0 8px
  height calc(100% - 132px)
  width 100%
  overflow visible
  //min-height 780px
  //max-height 90vh

.task-list-item
  //display flex
  position relative
  width 108px
  margin-bottom 4px

.task-list-filter-radio
  position relative
  top 4px
  width 18px
  height 18px
  margin 0 4px 0 4px

.task-list-filter-label
  position relative
  margin 4px

.task-form
  margin-bottom 4px
  padding-top 4px
