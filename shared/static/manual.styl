.manual
  position relative
  padding-top 8px
  max-width 1200px
  margin-left auto
  margin-right auto
  background-color $theme-l7

.manual-row
  top 0 !important

.dummy-button
  display inline-flex
  transform translateY(6px)
  cursor default
  pointer-events none

.manual-chapter
  margin 32px
  border-bottom solid 1px $theme
  &:last-child
    border none
  & i
    color $theme
  & em
    font-style normal
    color $theme

.manual-list
  list-style disc
  padding-left 2em
  margin-bottom 1em

.manual-info-block
  display flex
  flex-direction row
  border solid 1px $theme
  border-radius 16px
  margin 16px 32px
  padding 16px
  & i
    margin-right 16px
    font-size 42px