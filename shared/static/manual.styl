.manual
  position relative
  padding-top 8px
  max-width 1200px
  margin-left auto
  margin-right auto
  background-color $theme-l7

.manual-row
  top 0 !important

.dummy-label-button
.dummy-button
  display inline-flex
  transform translateY(6px)
  cursor default
  pointer-events none
  margin-right 4px
  margin-left 4px

.dummy-label-button
  padding-right 2px
  padding-left 2px

.manual-icon
  line-height 1.5rem
  vertical-align middle

.manual-chapter
  margin 4px 0
  padding 24px
  border-bottom solid 1px $theme
  border-top solid 1px $theme
  border-radius 16px
  & i
    color $theme
  & em
    font-style normal
    color $theme
  & p
    text-align justify
  & h3, h2
    text-align center

.manual-list
  list-style disc
  padding-left 2em
  margin-bottom 1em

.manual-info-block
  display flex
  flex-direction row
  border solid 1px $theme
  border-radius 16px
  margin 16px 32px
  padding 16px
  & i
    margin-right 16px
    font-size 42px
  & p
    margin-top 0
    margin-bottom 0
    margin-right 16px