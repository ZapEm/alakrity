@keyframes bounce
  40%
    transform scale(.80, .80)



.animate-arming
  animation bounce normal forwards 0.4s// ease-out

.animate-drag-pop
  transform scale(1.01, 1.01)
  //animation pop-out 0.07s normal forwards ease-out

.animate-blend-in
  animation blend-in normal forwards 2s// ease-out

.animate-fade-in
  animation controls-fade-in normal forwards 1s ease

.animate-fade-out
  animation controls-fade-out normal forwards 1s ease

.mascot-blend-in
  animation controls-fade-in normal forwards 0.7s ease

.mascot-blend-out
  animation controls-fade-out normal forwards 0.7s ease