.tt-timetable
  transition box-shadow 0.5s ease-in-out
  border solid 3px
  border-radius 8px

.tt-edit-mode
  box-shadow 0 0 15px 5px $theme !important

.tt-header-row
  border-top solid 2px #777
  border-bottom solid 1px #777
  .tt-header-corner
    display inline-block
    vertical-align top
    width 79px
    height 45px
    border-right solid 1px #777
  .tt-header-day
    display inline-block
    vertical-align top
    padding-top 1px
    width 113px
    text-align center
    border-left solid 1px #777

.tt-content-dnd
  position relative
  display inline-block

.tt-timecolumn
  display inline-block
  vertical-align top
  width 79px
  text-align right
  border-right solid 1px #777
  .tt-timecolumn-time
    line-height 3rem
    height 3rem
    padding-right 0.2rem
    border-top solid 1px #777
.tt-column
  display inline-block
  vertical-align top
  position relative
  width 113px
  border-left solid 1px #777
  .tt-timeslot
    height 3rem
    border-top solid 1px #777
  .tt-timeslot-group
    height 3rem
    .tt-timeslot
      // height from inline style
      border-top solid 1px rgba(119, 119, 119, 0.4)
    .tt-timeslot:first-child
      border-top solid 1px #777

.tt-task-item
  box-sizing border-box
  padding 2px
  overflow hidden
  position absolute

.tt-isover
  background-color rgba(0,0,0,60%)

.tt-timecolumn-time
.tt-header-day-name
  font-weight 500


.tt-toolbar
  position fixed
  height 30px
  transition all 0.5s ease-in-out
  width 100%
  max-width 1200px
  background-color $theme-l3
  z-index 3
  opacity 0

.tt-toolbar-helper
  transition all 0.5s ease-in-out
  height 0

.tt-toolbar-visible
  opacity 1
  height 30px

.tt-toolbar-color-picker
  display inline-block

.tt-toolbar-color-option
  background-color white
  margin 4px
  padding 0
  width 22px
  height 22px
  border solid 1px $theme

.tt-toolbar-no-project-option::after
  position relative
  margin auto
  color $theme
  content 'X'


.tt-tco-selected
  border solid 1px $theme-d2
  box-shadow  0 0 0 1.5px $theme !important

.tt-controls
 height 35px


.tt-controls-text
  display inline-block
  transform translateY(-7px)

