.tt-timetable
  //transition box-shadow 0.5s ease-in-out
  //overflow hidden
  border solid 3px
  border-radius 8px

//.tt-edit-mode
//  box-shadow 0 0 15px 5px $theme !important

.tt-header-row
  border-top solid 2px #777
  border-bottom solid 1px #777
  .tt-header-corner
    display inline-block
    vertical-align top
    width 79px
    height 45px
    border-right solid 1px #777
  .tt-header-day
    display inline-block
    vertical-align top
    padding-top 1px
    width 113px
    text-align center
    border-left solid 1px #777

.tt-content-dnd
  position relative
  display inline-block

.tt-timecolumn
  display inline-block
  vertical-align top
  width 79px
  text-align right
  border-right solid 1px #777
  border-bottom-left-radius 5px
  background-color $theme-l3

.tt-timecolumn-time
  line-height 3rem
  height 3rem
  padding-right 0.2rem
  border-top solid 1px #777


.tt-column
  display inline-block
  vertical-align top
  position relative
  width 113px
  border-left solid 1px #777
  .tt-timeslot
    height 3rem
    border-top solid 1px #777
  .tt-timeslot-group
    height 3rem
    .tt-timeslot
    // height from inline style
      border-top solid 1px rgba(119, 119, 119, 0.4)
    .tt-timeslot:first-child
      border-top solid 1px #777

.tt-task-item
  box-sizing border-box
  padding 2px
  overflow hidden
  position absolute

.tt-isover
  background-color rgba(0, 0, 0, 60%)

.tt-timecolumn-time
.tt-header-day-name
  font-weight 500

.tt-toolbar
  position fixed
  height 30px
  transition all 0.5s ease-in-out
  width 100%
  max-width 1200px
  background-color $theme-l3
  z-index 3
  opacity 0

.tt-toolbar-helper
  transition all 0.5s ease-in-out
  height 0

.tt-toolbar-visible
  opacity 1
  height 30px

.tt-toolbar-color-picker
  display inline-block

.tt-toolbar-color-option
  background-color white
  margin 4px
  padding 0
  width 22px
  height 22px
  border solid 1px $theme

.tt-toolbar-no-project-option::after
  position relative
  margin auto
  color $theme
  content 'X'

.tt-tco-selected
  border solid 1px $theme-d2
  box-shadow 0 0 0 1.5px $theme !important

.tt-controls
  transition background-image 0.5s ease-in-out
  height 35px

.tt-controls-edit-mode
  transition background 0.5s ease-in-out
  border-top-left-radius 5px
  border-top-right-radius 5px
  background-color $theme-l5
  background-image repeating-linear-gradient(135deg, transparent, transparent 20px, $theme-l7 21px, $theme-l7 40px)

.tt-controls-edit-mode-text
  margin 0
  padding-bottom 4px
  color $theme-d5
  letter-spacing 2px
  text-shadow: -1px -1px 0 $theme-l7, 1px -1px 0 $theme-l7, -1px 1px 0 $theme-l7, 1px 1px 0 $theme-l7;

.tt-controls-text
  margin 0 4px
  display inline-block
  transform translateY(-7px)

.tt-form-wrapper
  box-sizing border-box
  position absolute
  top 8px
  bottom 8px
  left 8px
  right 8px

.tt-form
  height 100%
  width 100%


.tt-form-line
  padding 4px 0
  display flex
  flex-direction row
  justify-content space-between
  width 100%

.tt-form-label
  padding 4px 0
  flex 0 0 40px

.tt-form-input
  padding 4px //!important
  flex 1

.tt-form-time-sign
  pointer-events none
  color #777
  padding 4px 0

.tt-form-spacer
  flex 0 0 32px

.tt-project-picker
  max-height 200px
  display flex
  flex-direction column
  flex-wrap nowrap


.tt-project-picker-label
  flex 0

.tt-project-picker-content
  padding 0 4px
  border solid 1px $theme
  border-radius 4px
  display flex
  flex 1

.tt-project-picker-option
  display flex
  flex-direction row
  align-items center
  cursor pointer
  margin 2px
  &:hover
    margin 2px 0
    border-left solid 2px
    border-right solid 2px

.tt-project-picker-option-text
  display flex
  width 100%
  flex 1
  padding 5px 4px 3px 4px
  pointer-events none
  //&.selected
  //  font-weight 500

.tt-project-picker-option-square
  flex 0 0 auto
  margin 0 4px
  height 26px
  width 26px
  border solid 1px $theme
  border-radius 4px
  //&.selected
  //  border-width 2px
