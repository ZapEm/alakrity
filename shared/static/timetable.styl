.tt-timetable
  border solid 3px
  border-radius 8px
  background-color white

.tt-header-row
  border-top solid 2px #777
  border-bottom solid 1px #777
  height 48px
  .tt-header-corner
    display inline-block
    padding 4px
    text-align center
    width 79px
    height 45px
    border-right solid 1px #777
  .tt-header-day
    display inline-block
    vertical-align top
    padding-top 1px
    width 113px
    text-align center
    border-left solid 1px #777

.tt-content-dnd
  position relative
  display inline-block

.tt-timecolumn
  display inline-block
  vertical-align top
  width 79px
  text-align right
  border-right solid 1px #777
  border-bottom-left-radius 5px
  background-color $theme-l3

.tt-timecolumn-time
  height 3rem
  padding-right 4px
  border-top solid 1px #777

.tt-column
  display inline-block
  vertical-align top
  position relative
  width 113px
  border-left solid 1px #777
  .tt-timeslot
    height 3rem
    border-top solid 1px #777
  .tt-timeslot-group
    height 3rem
    .tt-timeslot
      border-top solid 1px rgba(119, 119, 119, 0.4)
    .tt-timeslot:first-child
      border-top solid 1px #777

.tt-task-item
  box-sizing border-box
  padding 2px
  position absolute

.tt-isover
  background-color rgba(0, 0, 0, 60%)

.tt-timecolumn-time
.tt-header-day-name
  font-weight 500

.tt-toolbar
  position fixed
  height 30px
  transition all 0.5s ease-in-out
  width 100%
  max-width 1200px
  background-color $theme-l3
  z-index 3
  opacity 0

.tt-toolbar-helper
  transition all 0.5s ease-in-out
  height 0

.tt-toolbar-visible
  opacity 1
  height 30px

.tt-toolbar-color-picker
  display inline-block

.tt-toolbar-no-project-option::after
  position relative
  margin auto
  color $theme
  content 'X'

.tt-tco-selected
  border solid 1px $theme-d2
  box-shadow 0 0 0 1.5px $theme !important

.tt-controls-wrapper
  position relative
  height 35px
  width 100%

.tt-controls
  display grid
  grid-template-columns 4fr 1fr 2fr 1fr 4fr
  align-items center
  justify-items center
  transition background-image 0.5s ease-in-out
  width 100%
  height 35px

.tt-controls-left
  justify-self start
  margin-left 16px

.tt-controls-middle-l
  justify-self end

.tt-controls-middle-r
  justify-self start

.tt-controls-right
  justify-self end
  margin-right 16px
  margin-bottom 1px

.tt-controls-visible
.tt-controls-invisible
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.tt-controls-visible
  animation controls-fade-in 0.7s normal ease

.tt-controls-invisible
  animation controls-fade-out 0.7s normal ease
  opacity 0
  visibility 0
  pointer-events none

.tt-controls-hide-initial
  opacity 0
  visibility 0
  pointer-events none

.tt-controls-edit-mode
  display grid
  grid-template-columns 1fr 3fr 1fr
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  border-top-left-radius 5px
  border-top-right-radius 5px
  background-color $theme-l5

.tt-controls-edit-mode-text
  grid-column 2
  text-align center
  line-height 35px
  margin -2px 0 2px 0
  color $theme-d3
  font-weight 400
  letter-spacing 3px

.tt-controls-edit-mode-done
  padding-right 16px
  align-self center
  justify-self end

.tt-controls-label
  display inline-block
  margin 0 4px
  transform translateY(-5px)

.timetable-sidebar
  display flex
  flex-direction column
  justify-content flex-start

.tt-edit-sidebar
  box-sizing border-box
  background-color white
  position relative
  height 100%

  //grid-template-rows 151px 1fr 1fr

.tt-form
  height 100%
  width 100%
  background-color white

.tt-form-line
  padding 4px 0
  display flex
  flex-direction row
  justify-content space-between
  width 100%

.tt-form-label
  padding 4px 0
  flex 0 0 40px

.tt-form-input
  padding 4px
  flex 1

.tt-form-time-sign
  pointer-events none
  color #777
  padding 4px 0

.tt-form-spacer
  flex 0 0 32px

.tt-project-picker
  //max-height 200px
  display flex
  flex-direction column
  flex-wrap nowrap

.tt-project-picker-label
  flex 0

.tt-project-picker-content
  padding 0 4px
  border solid 1px $theme
  border-radius 4px
  display flex
  flex 1

.tt-project-picker-option
  display flex
  flex-direction row
  align-items center
  cursor pointer
  margin 2px
  &:hover
    margin 2px 0
    border-left solid 2px
    border-right solid 2px

.tt-project-picker-option-text
  display flex
  width 100%
  flex 1
  padding 5px 4px 3px 4px
  pointer-events none


.tt-project-picker-option-square
  flex 0 0 auto
  margin 0 4px
  height 26px
  width 26px
  border solid 1px $theme
  border-radius 4px

