.modal
  width 400px
  overflow hidden
  border solid 1px $theme-d3

.modal-header
  display inline-flex
  justify-content space-between
  width 100%
  height 35px
  padding 4px 16px
  align-items center

.modal-middle
  display flex
  min-height 200px

.modal-middle-left
  flex 0

.modal-middle-right
  flex 1

.modal-footer
  display inline-grid
  width 100%
  grid-template-columns 1fr 1fr 1fr
  grid-column-gap 16px
  align-items center
  height 43px
  padding 4px 16px
  text-align center

.loading-component
  position absolute
  top 100px
  left 50%

.mascot-image
  height 181px
  width 242px
  animation blend-in normal forwards 0.3s ease-out