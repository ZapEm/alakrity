.no-underline
  text-decoration inherit

.labeled-icon-button
.icon-button
  display inline-block
  align-self center
  padding 0
  margin 4px
  background none
  border none
  text-align center
  text-decoration none
  cursor pointer
  -webkit-appearance none
  &:not(.disabled):hover
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12) !important

.icon-button-wrapper
  display inline-block
  height 26px
  line-height 26px
  text-align center

.icon-button-label
  margin-left 8px
  display inline-block
  transform translateY(-6px)
  cursor pointer

.labeled-icon-button
  padding 0 8px
  display flex
  align-items center

.labeled-icon-button-label
  flex 1
  text-align left
  margin 0 8px

.labeled-icon-button-icon
  flex 0

.clock
  display inline-block
  pointer-events all
  margin-right 236px
  line-height 43px

.clock-wrapper
  position fixed
  max-width 1200px
  pointer-events none

.modal
  width 400px
  overflow hidden
  border solid 1px $theme-d3

.modal-header
  display inline-flex
  justify-content space-between
  width 100%
  height 35px
  padding 4px 16px
  align-items center

.modal-middle
  display flex
  min-height 200px

.modal-middle-left
  flex 0

.modal-middle-right
  flex 1

.modal-footer
  display inline-grid
  width 100%
  grid-template-columns 1fr 1fr 1fr
  grid-column-gap 16px
  align-items center
  height 43px
  padding 4px 16px
  text-align center

