.project
  display inline-block
  vertical-align top
  width 100%
  height 100%
  padding 8px
  overflow hidden

.projects-list
  width 100%
  display block

.project-list-item
  display inline-block
  box-sizing border-box
  padding 8px 8px 0 0
  width 33.333%
  height 288px
  &.project-list-item-3rd
    padding 8px 0 0 0

.project-color-picker
  z-index 10

.project-selector
  flex 1