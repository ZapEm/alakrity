.project
  display inline-block
  vertical-align top
  width 100%
  height 100%
  // padding 8px
  //overflow hidden

.projects-list
  width 100%
  display block

.projects-view
  background-color white
  min-height 300px

//.projects-sidebar
//  position fixed

.project-line
  display grid
  grid-template-columns 1fr 4fr

.project-task-type-label
  position relative
  grid-column 2

.project-list-item
  display inline-block
  box-sizing border-box
  padding 8px 8px 0 0
  width 33.333%
  height 288px
  &.project-list-item-3rd
    padding 8px 0 0 0

.project-color-picker
  position relative
  //top -50px
  //left 0

.project-color-picker-content
  position absolute
  padding 4px
  transform translate(-3px, -37px)
  z-index 10

.project-color-picker-grid
  position relative
  display grid
  grid-template-columns 1fr 1fr 1fr 1fr 1fr
  grid-template-rows 1fr 1fr

.project-color-picker-option
  background-color white
  margin 4px
  padding 0
  width 26px
  height 26px
  border solid 1px $theme

.project-selector
  padding 4px

.project-edit
  margin-bottom 4px
  padding-top 4px
  background-color white
  border-left-width 6px
  border-right-width 6px

.project-description-area
  resize none