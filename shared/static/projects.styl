.project
  display inline-block
  vertical-align top
  width 100%
  height 100%

.project-type-icon
  display inline
  padding-right 16px
  line-height 27px
  vertical-align top
  cursor help

.projects-list
  width 100%
  display block

.project-item-buttons
  position absolute
  top 4px
  right 8px

.projects-view
  background-color white
  min-height 300px

.project-input
  padding 4px
  background-color rgba(255, 255, 255, 0.7)
  &.checkbox
    width 1.5rem !important
    height 1.5rem !important
    margin-top 5px
    margin-bottom 4px

.project-line
  display grid
  grid-template-columns 4.5fr 1fr
  margin-bottom 8px

.project-task-type-select
  height 32px

.project-task-type-label
  position relative
  grid-column 1

.project-list-item
  display inline-block
  box-sizing border-box
  padding 8px 8px 0 0
  width 33.333%
  height 288px
  &.project-list-item-3rd
    padding 8px 0 0 0

.project-color-picker
  position relative

.project-color-picker-content
  position absolute
  padding 4px
  right -5px
  margin-top 2px
  z-index 10
  background-color rgba(255, 255, 255, 0.9)

.project-color-picker-grid
  position relative
  display grid
  grid-template-columns 1fr 1fr 1fr 1fr 1fr
  grid-template-rows 1fr 1fr
  grid-gap 4px

.project-color-picker-item
  float right

.project-color-picker-option
  background-color white
  margin 0
  margin-left auto
  padding 0
  width 32px
  height 32px
  border solid 1px $theme

.project-selector
  padding 4px
  margin 4px 0

.project-edit
  margin-bottom 4px
  padding-top 4px
  background-color white
  border-left-width 6px
  border-right-width 6px

.project-description-area
  resize none
  height 80px

.project-description
  margin 8px 0 0 0
  font-size small
  line-height 1.1rem
  height 4.4rem
  overflow hidden

.project-type-selector
  text-align end

.project-type-button
  background-color rgba(255, 255, 255, 0.9)
  padding 0
  padding-top 3px

.project-type-content
  display none
  position absolute
  margin-top 2px
  padding 4px
  right 8px
  background-color rgba(255, 255, 255, 0.95)
  text-align start
  z-index 10

.project-type-separator
  font-size small
  margin-top 8px
  margin-left 4px
  pointer-events none
  &:first-child
    margin-top 0

.project-type-option
  border-radius 4px
  padding 2px
  cursor pointer
  &:hover
    background-color $theme-l7

.project-type-option-text
  display inline
  pointer-events none
  margin-left 4px
  vertical-align middle
  line-height 1

.project-type-option-icon
  line-height 1
  vertical-align middle
  pointer-events none

.milestones-component
  position absolute
  bottom 8px
  left 16px
  right 16px

.milestones-wrap
  border-radius 5px
  overflow hidden

.milestones-table
  margin -4px
  display table
  width calc(100% + 8px)
  border-collapse collapse
  .milestone:first-child > .milestone-cell
    padding-top 4px
  .milestone:last-child > .milestone-cell
    padding-bottom 4px

.milestone-cell
  max-width 140px

.milestone-cell-title
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  width 140px

.milestone
  display table-row
  border solid 1px transparent
  background-color rgba(255,255,255,0.4)
  background-clip padding-box
  border-radius 4px
  .milestone-cell:last-child
    cursor help
    text-align right
    padding-left 0

.milestone-managing
  position relative
  width 238px
  display grid
  grid-template-columns 34px 15% 70%
  grid-template-rows 34px 34px
  grid-template-areas: "c a b " "d d e";
  line-height 34px
  background-color rgba(255,255,255,0.4)
  background-clip padding-box
  border-radius 4px
  margin 5px
  padding-right 12px
  padding-left 2px
  overflow hidden

.milestone-managing-dateinput
.milestone-managing-input
  display inline-block
  grid-area b
  border-radius 4px
  border solid 1px rgba(0,0,0,0.4)
  padding 0 8px
  margin 4px 0 2px 0

.milestone-managing-dateinput
  cursor pointer
  //text-align center
  grid-area e
  margin 2px 0 4px 0

.milestone-managing-label
  text-align right
  display inline-block
  margin-right 4px
  margin-top 1px
  grid-area a
  &.deadline
    grid-area d
    margin-top -1px

.milestone-managing-button
  display inline-block
  grid-area c

.milestone-cell
  display table-cell
  padding-left 8px
  padding-right 8px
  vertical-align middle

.milestone-manage-save
  display inline-block
  position absolute
  right 0
  top -6px

.milestone-manage-add
  display inline-block
  position absolute
  left 0
  top -6px

.milestone-day-picker-wrapper
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  margin 4px
  z-index 30

.milestone-day-picker
  position relative
  background-color white
  height 100%
  width 100%
  line-height 1.1
  border-radius 4px
  .DayPicker-Day
    padding-right 0.45rem
    padding-left 0.45rem

.milestone-in-past
  cursor help
  position absolute
  right 12px
  bottom 6px
  color #999