.project
  display inline-block
  vertical-align top
  width 100%
  height 100%
  padding 8px
  overflow hidden

.projects-list
  width 100%
  display block
  background-color white

.project-list-item
  display inline-block
  box-sizing border-box
  padding 8px 8px 0 0
  width 33.333%
  height 288px
  &.project-list-item-3rd
    padding 8px 0 0 0

//.project-color-picker
//  z-index 10


.project-color-picker-content
  display grid
  grid-template-columns 1fr 1fr 1fr 1fr 1fr
  grid-template-rows 1fr 1fr


.project-selector
  flex 1

.project-form
  margin-bottom 4px
  padding-top 4px
  background-color white

.project-input
  max-width 100%
  background-color rgba(255,255,255,0.8)

.project-description-area
  max-width 100%
  background-color rgba(255,255,255,0.8)